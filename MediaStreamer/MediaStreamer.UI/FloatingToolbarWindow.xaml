<Window x:Class="MediaStreamer.UI.FloatingToolbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaStreamer.UI"
        mc:Ignorable="d"
        Width="444"
        Height="70"
        Title="MediaStreamer.UI - Toolbar"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize" ShowInTaskbar="False"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <local:FloatingToolbarControl OnRedButtonClick="FloatingToolbarControl_OnRedButtonClick" />
    </Grid>
</Window>
